global:
  scrape_interval: 30s
  evaluation_interval: 30s
  external_labels:
    service_owner: {{ org }}

remote_write:
  - url: https://vm.monitoring.gcp.obol.tech/write
    authorization:
      credentials: "{{ vault.external.prometheus.password }}"
    write_relabel_configs:
      - source_labels: [job]
        regex: "charon|mev-boost"
        action: keep

scrape_configs:
  - job_name: "charon"
    static_configs:
      - targets: ["localhost:3620"]
    relabel_configs:
      - target_label: alert_discord_ids
        replacement: "{{ discord_id }}"
  - job_name: "mev-boost"
    static_configs:
      - targets: ["localhost:18551"]
    relabel_configs:
      - target_label: cluster_name
        replacement: "{{ cluster_name }}"
      - target_label: cluster_peer
        replacement: "{{ cluster_peer }}"
